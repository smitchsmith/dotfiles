<h3>New Goal</h3>
<form action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label>Title<input type="text" name="goal[title]"></label>

  <label>Description<input type="text" name="goal[description]"></label>

  <input type="hidden"
         name="goal[visibility]"
         value="false">

  <label>Public?<input type="checkbox"
                       name="goal[visibility]"
                       checked
                       value="true"></label>

  <input type="submit" value="Create Goal">

</form>